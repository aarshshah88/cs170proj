			# if start == x:


G = nx.Graph()
nodeAdder(G, 0, 3, 3)
nodeAdder(G, 1, 4, 4)
nodeAdder(G, 2, 5, 5)
nodeAdder(G, 3, 6, 6)
edgeAdder(G, 0, 1, 5)
edgeAdder(G, 1, 2, 6)
edgeAdder(G, 2, 3, 7)

write_to_file(G)






